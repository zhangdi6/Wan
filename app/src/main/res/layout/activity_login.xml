<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@drawable/bgbg"
    tools:context="com.example.waz.UI.Activity.LoginActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb"
        app:navigationIcon="@drawable/ic_backleft_24dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"/>
    <TextView
        android:id="@+id/tv"
        android:text="登录"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/White"
        android:layout_marginVertical="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/login"
        android:layout_gravity="center"
        android:theme="@style/MyEditText"

        android:hint="请输入用户名"
        android:textColorHint="@color/Grey"
        android:drawableLeft="@mipmap/loginname"
        android:layout_width="250dp"
        android:layout_height="60dp" />
    <EditText
        android:id="@+id/pwd"
        android:layout_gravity="center"
        android:theme="@style/MyEditText"

        android:hint="请输入密码"
        android:textColorHint="@color/Grey"
        android:drawableLeft="@mipmap/loginpwd"
        android:layout_width="250dp"
        android:layout_marginBottom="100dp"
        android:layout_height="60dp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/loginbtn"
        android:layout_width="200dp"
        android:text="登录"

        android:textColor="@color/White"
        android:textSize="17sp"
        android:background="@drawable/login"
        android:gravity="center"
        android:layout_height="40dp" />
    <TextView
        android:layout_gravity="center"
        android:textColor="@color/White"
        android:text="或"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/registerbtn"
        android:background="@drawable/register"
        android:text="注册"

        android:textSize="17sp"
        android:textColor="@color/White"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp" />
</LinearLayout>
